@model GlobalForums.Domains.Models.Post.PostIndexViewModel

<h1>@Model.Title</h1>

<div>
    Author: @Model.AuthorName (@Model.AuthorRating)
    Author: @Model.DateCreated
</div>

<div>
    @Model.PostContent
</div>

@if (@Model.Replies.Any())
{
    foreach (var reply in Model.Replies)
    {
        <div>
            <div>
                Reply Author: @reply.AuthorName
                Reply Author: @reply.DateCreated
            </div>

            <div>
                Reply: @reply.ReplyContent
            </div>
        </div>
    }
}